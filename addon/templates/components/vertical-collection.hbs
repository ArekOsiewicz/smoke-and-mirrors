{{#each _content key='@index' as |item index|}}
  {{#vertical-item
    itemTagName=itemTagName
    defaultHeight=defaultHeight
    alwaysUseDefaultHeight=alwaysUseDefaultHeight
    content=item
    radar=radar
    index=index
    register=(action register)
    unregister=(action unregister)
  }}
    {{#if shouldRenderList}}
      {{yield item index}}
    {{/if}}
  {{/vertical-item}}
{{/each}}