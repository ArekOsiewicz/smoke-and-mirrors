{{#each _content key='@index' as |item index|}}
  {{#vertical-item
    defaultHeight=defaultHeight
    itemTagName=itemTagName
    content=item
    radar=radar
    exposeAttributeState=exposeAttributeState
    index=index
    alwaysUseDefaultHeight=alwaysUseDefaultHeight
    keyForId=key
    collection=this
    as |wrapper|
  }}
    {{#if shouldRenderList}}
      {{#if wrapper.contentInserted}}
        {{yield item}}
      {{/if}}
    {{/if}}
  {{/vertical-item}}
{{/each}}