canvas-wrapper
  display block
  position relative
  height 100%
  background #333

off-canvas
  display block
  position absolute
  transform scale(.85, .85)
  top 0
  left 0
  width 87%
  height 100%
  background #fff
  -webkit-transition -webkit-transform .5s
  transition transform .5s

off-canvas.is-visible
  transform scale(1, 1)

main-canvas
  display block
  position relative
  -webkit-transition -webkit-transform .5s
  transition transform .5s
  background #f8f8f8
  height 100%

main-canvas.deactivated
  transform translate3d(87%, 0, 0)

main-canvas .close-overlay
  position absolute
  top 0
  right 0
  width 0
  height 0
  background rgba(255, 255, 255, 0.3)
  content ' '
  display block
  opacity 0
  -webkit-transition opacity 0.5s, width 0.1s 0.5s, height 0.1s 0.5s
  transition opacity 0.5s, width 0.1s 0.5s, height 0.1s 0.5s

main-canvas.deactivated
  box-shadow 0px 0px 10px 0px #000

main-canvas.deactivated .close-overlay
  width 100%
  height 100%
  opacity 1
  -webkit-transition opacity .5s
  transition opacity 0.5s
