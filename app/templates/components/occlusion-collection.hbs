{{#each __content key=keyForId as |item|}}
  {{#occlusion-item
    defaultHeight=defaultHeight
    tagName=itemTagName
    content=item
    alwaysUseDefaultHeight=alwaysUseDefaultHeight
    keyForId=keyForId
    collection=this
    as |wrapper|
  }}
    {{#if wrapper.contentVisible}}
      {{yield item}}
    {{else}}
      {{#if wrapper.contentHidden}}
        {{yield item}}
      {{/if}}
    {{/if}}
  {{/occlusion-item}}
{{/each}}