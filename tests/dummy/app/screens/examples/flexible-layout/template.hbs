<div class="container-fluid">
    <div class="row">
        <div class="col-sm-7">
          {{!- BEGIN-SNIPPET flexible-layout-example }}
            <div class="table-wrapper">
              {{#vertical-collection
                content=model.images
                defaultHeight=300
                alwaysUseDefaultHeight=false
                visibleBuffer=2
                useContentProxy=true
                firstReached="loadAbove"
                lastReached="loadBelow"
                as |image|
              }}
                  <div class="image-slide flexible">
                    {{async-image src=image.large}}
                  </div>
              {{/vertical-collection}}
            </div>
          {{!- END-SNIPPET }}
        </div>
        <div class="col-sm-5">
            <h3>Flexible Layouts</h3>
            <p>
                The Vertical Collection doesn't care if your items are of a uniform
                size or type.
            </p>
            <h4>Code for Demo</h4>
          {{code-snippet name="flexible-layout-example.hbs"}}
        </div>
    </div>
</div>